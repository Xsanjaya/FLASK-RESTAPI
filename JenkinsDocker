pipeline {
  agent {
    label 'Linux1'
  }
  stages {
    stage('PREPARATION') {
      steps {
        sh '''
        whoami
        docker build -t flask-api:1.1 .
        '''
      }
    }
    stage('Runing APP') {
      steps {
        sh '''
        docker run -name flask-api -d -p 5000:5000 flask-api:1.1
        '''
      }
    }
  }  
}
