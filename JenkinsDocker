pipeline {
  agent {
    label 'Linux1'
  }
  stages {
    stage('PREPARATION') {
      steps {
        sh '''
        sudo docker build -t flask-api:1.1 .
        '''
      }
    }
    stage('Runing APP') {
      steps {
        sh '''
        sudo docker run -d -p 5000:5000 flask-api:1.1
        '''
      }
    }
  }  
}
